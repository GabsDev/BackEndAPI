            input(type="text" name="action" placeholder="action" value=`${line.action}`)
            input(type="integer" name="sid" placeholder="sid" value=`${line.sid}`)
            input(type="integer" name="eid" placeholder="eid" value=`${line.eid}`)
            input(type="integer" name="leg" placeholder="leg" value=`${line.leg}`)
            input(type="integer" name="pid" placeholder="pid" value=`${line.pid}`)
            input(type="text" name="alt" placeholder="alt" value=`${line.alt}`)
            input(type="text" name="lid" placeholder="lid" value=`${line.lid}`)
            input(type="text" name="vml" placeholder="vml" value=`${line.vml}`)
            input(type="text" name="hml" placeholder="hml" value=`${line.hml}`)
            input(type="text" name="ttl" placeholder="ttl" value=`${line.ttl}`)
            input(type="text" name="tov" placeholder="tov" value=`${line.tov}`)
            input(type="text" name="tun" placeholder="tun" value=`${line.tun}`)
            input(type="text" name="vsd" placeholder="vsd" value=`${line.vsd}`)
            input(type="text" name="vso" placeholder="vso" value=`${line.vso}`)
            input(type="text" name="hsd" placeholder="hsd" value=`${line.hsd}`)
            input(type="text" name="hso" placeholder="hso" value=`${line.hso}`)
            input(type="text" name="draw" placeholder="draw" value=`${line.draw}`)

            input(type="submit" value="Update")
